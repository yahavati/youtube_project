<!-- res/layout/item_video.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <!-- Buttons on the side -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|end"
        android:layout_alignParentEnd="true"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/like"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Like" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.4K"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <ImageButton
            android:id="@+id/btn_dislike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/dislike"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Dislike"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dislike_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="61"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <ImageButton
            android:id="@+id/btn_comment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/comment"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Comment"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/share"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Share"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Video description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/video_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="codewithnomi"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/video_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit Shop UI in React Native ðŸ”¥ #shorts #reactnative #reactjs #reactnativetutorial #expo #ui"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</RelativeLayout>


