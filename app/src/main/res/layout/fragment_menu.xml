<!-- res/layout/fragment_menu.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp">

    <RelativeLayout
        android:id="@+id/menu_content"
        android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trending"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_gaming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gaming"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sports"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_podcasts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podcasts"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_youtube_premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YouTube Premium"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_youtube_studio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YouTube Studio"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_youtube_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YouTube Music"

            android:background="@drawable/round_button_background" />

        <Button
            android:id="@+id/button_youtube_kids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YouTube Kids"

            android:background="@drawable/round_button_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy â€¢ Terms of Service"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</RelativeLayout>

    <!-- Transparent overlay to detect clicks outside the menu -->
<View
android:id="@+id/transparent_overlay"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/transparent"/>
    </FrameLayout>
