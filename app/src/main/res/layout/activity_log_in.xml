<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".login_screen">


  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="364dp"
      android:layout_height="454dp"
      android:orientation="vertical"
      android:padding="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.942"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Adjust the password field layout -->
    <EditText
        android:id="@+id/Username"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enter_username_min_5_chars_1_number"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.45"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="51dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <EditText
          android:id="@+id/Password"
          android:layout_width="475dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:autofillHints="password"
          android:baselineAligned="false"
          android:ems="10"
          android:hint="@string/password"
          android:inputType="textPassword"
          android:textColor="@android:color/white"
          android:textColorHint="@color/white"
          tools:ignore="InefficientWeight,MissingConstraints,TouchTargetSizeCheck" />

      <TextView
          android:id="@+id/showPassword"
          android:layout_width="65dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:padding="10dp"
          android:text="Show"
          android:textColor="#DAD8D8"
          tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#D36D6D"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/forgot_password"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:text="@string/forgot_password"
        android:textColor="@android:color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <Button
          android:id="@+id/login"
          android:layout_width="226dp"
          android:layout_height="57dp"
          android:layout_gravity="center"
          android:layout_weight="20"
          android:autoSizeMaxTextSize="12dp"
          android:backgroundTint="#BC2424"
          android:text="@string/login_user"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:textStyle="italic"
          tools:ignore="UnusedAttribute" />

      <Button
          android:id="@+id/sign"
          android:layout_width="229dp"
          android:layout_height="57dp"
          android:layout_gravity="center"
          android:layout_weight="20"
          android:autoSizeMaxTextSize="12dp"
          android:backgroundTint="#BC2424"
          android:text="@string/sign"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:textStyle="italic"
          tools:ignore="UnusedAttribute" />
    </LinearLayout>
  </LinearLayout>

  <ImageView
      android:id="@+id/youtube_logo"
      android:layout_width="433dp"
      android:layout_height="242dp"
      android:layout_gravity="center"
      android:minWidth="10dp"
      android:src="@drawable/youtube"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.039"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="-19dp" />

  <androidx.constraintlayout.widget.Group
      android:id="@+id/group"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
